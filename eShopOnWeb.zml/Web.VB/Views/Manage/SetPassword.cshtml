@model SetPasswordViewModel
@{ ViewData["Title"] = "Set password"; }
@{
ViewData[ManageNavPages.ActivePageKey] = ManageNavPages.ChangePassword;
}
<h4>Set your password</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
      You do not have a local username/password for this site. Add a local
      account so you can log in without an external login.
  </p>
<div class="row">
  <div class="col-md-6">
    <form method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="@Model.NewPassword"></label>
        <input asp-for="@Model.NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-default">Set password</button>
    </form>
  </div>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}